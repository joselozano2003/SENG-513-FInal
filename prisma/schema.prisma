// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Test {
  id        Int     @id @default(autoincrement())
  title     String
  content   String?
  published Boolean @default(false)
}



model triviaGame {
  id          Int     @id @default(autoincrement())
  state       Int
  players     triviaGamePlayer[]
  questions   triviaQuestion[]
  playerLimit Int
  admin       String
}

model triviaGamePlayer {
  id        Int     @id @default(autoincrement())
  game      triviaGame    @relation(fields: [gameId], references: [id])
  gameId    Int
  userId    String  
  playerNumber Int
  score     Int
  playerAnswers triviaPlayerAnswer[]
}

model triviaQuestion {
  id        Int     @id @default(autoincrement())
  question  String
  answer    String
  category  String
  game      triviaGame[]
  choices   triviaQuestionChoice[]
  playerAnswers triviaPlayerAnswer[]
}

model triviaQuestionChoice {
  id        Int     @id @default(autoincrement())
  question  triviaQuestion    @relation(fields: [questionId], references: [id])
  questionId    Int
  choice    String
  correct   Boolean
  playerAnswers triviaPlayerAnswer[]
}

model triviaPlayerAnswer {
  id          Int     @id @default(autoincrement())
  player      triviaGamePlayer    @relation(fields: [playerId], references: [id])
  playerId    Int
  question    triviaQuestion    @relation(fields: [questionId], references: [id])
  questionId  Int
  choice      triviaQuestionChoice    @relation(fields: [choiceId], references: [id])
  choiceId    Int
}
